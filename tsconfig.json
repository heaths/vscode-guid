{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "sourceMap": true,
    "rootDirs": [
      "src",
      "."
    ],
    "outDir": "out",
    "resolveJsonModule": true,
    "removeComments": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    ".vscode-test-web"
  ]
}
